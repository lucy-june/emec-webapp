        <div class="mectemp bd-orange">

                    <table style="width:100%">

                        <tr>
                            <td style="width:100px;height:65px">
                                <div class="input-control text size2">
                                    <label class="col-sm-2 control-label">公钥文件*： </label>
                                </div>
                            </td>
                            <td style="height:65px">
                                <form id="myForm2" method="post" enctype="multipart/form-data" action="/super/uploadPublicKeysService">
                                    <input id="ZIPFILE" name="ZIPFILE" type="file">
                                </form>
                            </td>
                        </tr>
                        <tr>
                            <td style="height:65px">
                                <button class="bg-mecBlue fg-white" style="height:30px;width:120px"
                                        onclick="uploadPublicKey()">上传公钥文件
                                </button>
                            </td>
                        </tr>
                    </table>
               </div>


