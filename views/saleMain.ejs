                $("#iframe").attr("src", "logistics/prepare");
            });


            var updateNav=function(arr){
                $("#nav").empty();
                if(arr&&arr.length!=0){
                    var str="";
                    for(var k=0;k<arr.length;k++){
                        str+='<li><a href="#" class="fg-orange">'+arr[k]+'</a></li>';
                    }
                    str='<nav class="breadcrumbs" style="margin-top: 10px">'
                    +'<ul >'
                    +'<li><a href="#"><i class="icon-home fg-orange"></i></a></li>'
                    +str
                    +'</ul>'
                    +'</nav>';
                    $("#nav").append(str);
                }
            }


        });
    </script>

